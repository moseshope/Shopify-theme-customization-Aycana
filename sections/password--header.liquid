<style>

.header-logo {
  width: {{ section.settings.logo_max_width }}px!important;
  margin: 0 auto;
}

@media only screen and (max-width: 767px) {
  .header-logo {
    max-width: 290px!important;
  }
}

#password-header h1#site-title {
  font-size: 2em;
}

</style>

<div id="password-header" class="container">
  <h1 id="site-title">
    {% if section.settings.logo %}
    {% capture alt %}{{ section.settings.logo.alt | default: shop.name }}{% endcapture %}
    {% render 'responsive-image' with section.settings.logo, alt: alt, props: 'itemprop="logo"', class: 'header-logo' %}
    {% else %}
    {{ shop.name | escape }}
    {% endif %}
  </h1>

  {% if shop.password_message != '' %}
    <div class="welcome-message custom-font">{{ shop.password_message }}</div>
  {% else %}
    <div class="welcome-message custom-font">
      <p><span class="default-text">{{ 'coming_soon.general.opening_soon' | t }}</span></p>
    </div>
  {% endif %}

  {% if section.settings.social_media_icons %}

    <div class="password--social-links">
      {% assign class = 'password-social-links' %}
      {% render 'social-links', class: class %}
    </div>

  {% endif %}

</div>

{% schema %}
{
    "name": {
        "en": "Header",
        "de": "Überschrift",
        "es": "Encabezado",
        "fr": "En-tête",
        "pt-PT": "Cabeçalho"
    },
    "settings": [
        {
            "type": "header",
            "content": {
                "en": "Header",
                "de": "Überschrift",
                "es": "Encabezado",
                "fr": "En-tête",
                "pt-PT": "Cabeçalho"
            }
        },
        {
            "type": "image_picker",
            "id": "logo",
            "label": {
                "en": "Logo image",
                "de": "Logobild",
                "es": "Imagen del logotipo",
                "fr": "Image du logo",
                "pt-PT": "Imagem do logótipo"
