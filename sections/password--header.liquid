        },
        {
            "type": "range",
            "id": "logo_max_width",
            "min": 50,
            "max": 400,
            "step": 10,
            "unit": {
                "en": "px",
                "de": "px",
                "es": "px",
                "fr": "px",
                "pt-PT": "px"
            },
            "label": {
              "en": "Preferred width",
              "de": "Bevorzugte Breite",
              "es": "Ancho preferido",
              "fr": "Largeur préférée",
              "pt-PT": "Largura preferida"
